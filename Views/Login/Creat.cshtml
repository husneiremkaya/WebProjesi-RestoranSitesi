
@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br /><br />
      <section class="site-section bg-light" id="section-news">
          <div class="container">
              <div class="row">
                  <div class="col-md-12 text-center mb-5 site-animate">
                      <div class="row">
                          <div class="col-lg-12">
                              <div class="bg-image" style="background-image: url(/Content/images/reservation_1.jpg);"></div>
                          </div>
                          <div class="col-lg-12 p-5">
                              <h1 class="mb-4">ÜYE OL </h1>
                              <form action="#" method="post">
                                  <div class="row">
                                      <div class="col-md-6 form-group">
                                          <label for="m_fname">Adınız</label>
                                          <input type="text" class="form-control" id="m_fname">
                                      </div>
                                      <div class="col-md-6 form-group">
                                          <label for="m_lname">Soyadınız</label>
                                          <input type="text" class="form-control" id="m_lname">
                                      </div>
                                  </div>
                                  <div class="row">
                                      <div class="col-md-12 form-group">
                                          <label for="m_email">Email</label>
                                          <input type="email" class="form-control" id="m_email">
                                      </div>
                                  </div>
                                  <div class="row">
                                      <div class="col-md-6 form-group">
                                          <label for="m_people">Cinsiyet</label>
                                          <select name="" id="m_people" class="form-control">
                                              <option value="1">Kadın</option>
                                              <option value="2">Erkek</option>
                                             
                                          </select>
                                      </div>
                                      <div class="col-md-6 form-group">
                                          <label for="m_phone">Telefon</label>
                                          <input type="text" class="form-control" id="m_phone">
                                      </div>
                                  </div>

                                     

                                  <div class="row">
                                      <div class="col-md-12 form-group">
                                          <label for="m_message">Adres</label>
                                          <textarea class="form-control" id="m_message" cols="30" rows="7"></textarea>
                                      </div>
                                  </div>

                                  <div class="row">
                                      <div class="col-md-12 form-group">
                                          <input type="submit" class="btn btn-primary btn-lg btn-block" value="Kayıt">
                                      </div>
                                  </div>

                              </form>
                          </div>
                      </div>

                  </div>
              </div>
          </div>
      </section>


